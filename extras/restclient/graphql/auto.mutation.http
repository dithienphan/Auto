### Neues Auto anlegen
POST {{graphQlUrl}}
Content-Type: application/json
Authorization: Bearer {{login.response.body.$.data.login.token}}
X-REQUEST-TYPE: GraphQL

mutation {
  create(
  input: {
    modell: 'Alpha',
    ps: 4,
    art: 'VERBRENNER',
    hersteller: 'AUDI',
    preis: 11.1,
    rabatt: 0.011,
    lieferbar: true,
    datum: new
    Date(
    '2022-02-01'
    ),
    modellnummer: '9783897225831',
    homepage: 'https://acme.at/',
    "kategorien": ['SUV']
    }
  )
}

